// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   // "PROFESSOR" or "STUDENT"
  phone     String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  studentProfile   StudentProfile? @relation("StudentUser")
  professorStudents StudentProfile[] @relation("ProfessorUser")
  
  plansAsStudent   Plan[] @relation("StudentPlans")
  plansAsProfessor Plan[] @relation("ProfessorPlans")
  planTemplates    PlanTemplate[] @relation("ProfessorTemplates")

  progress         Progress[]
  weighIns         WeighIn[]
  payments         Payment[]
  notifications    Notification[]
  
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  
  activityLogs     ActivityLog[]
  passwordResets   PasswordReset[]
}

model StudentProfile {
  id               String   @id @default(uuid())
  userId           String   @unique
  user             User     @relation("StudentUser", fields: [userId], references: [id])
  
  professorId      String
  professor        User     @relation("ProfessorUser", fields: [professorId], references: [id])

  startDate        DateTime @default(now())
  membershipType   String?  // MENSUAL, TRIMESTRAL, SEMESTRAL, ANUAL
  membershipEndDate DateTime?
  monthlyFee       Float?
  observations     String?
  
  // New fields
  age              Int?
  details          String?  // Personal details
  pathologies      String?  // Medical conditions/pathologies
}

model Plan {
  id          String   @id @default(uuid())
  studentId   String
  student     User     @relation("StudentPlans", fields: [studentId], references: [id])
  
  professorId String
  professor   User     @relation("ProfessorPlans", fields: [professorId], references: [id])

  templateId  String?
  template    PlanTemplate? @relation(fields: [templateId], references: [id])

  name        String
  description String?
  startDate   DateTime
  endDate     DateTime?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  exercises   PlanExercise[]
}

model Exercise {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  muscleGroup String?
  equipment   String?
  difficulty  String?
  videoUrl    String?
  imageUrl    String?
  createdAt   DateTime @default(now())

  planExercises     PlanExercise[]
  templateExercises TemplateExercise[]
}

model PlanExercise {
  id          String   @id @default(uuid())
  planId      String
  plan        Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  
  exerciseId  String
  exercise    Exercise @relation(fields: [exerciseId], references: [id])

  day         String   // e.g., "Monday" or "Day 1"
  sets        Int
  reps        String?  // e.g., "10-12"
  weight      Float?   // Suggested weight
  rest        Int?     // In seconds
  order       Int      @default(0)

  progress    Progress[]
}

model Progress {
  id             String       @id @default(uuid())
  planExerciseId String
  planExercise   PlanExercise @relation(fields: [planExerciseId], references: [id])
  
  studentId      String
  student        User         @relation(fields: [studentId], references: [id])

  date           DateTime     @default(now())
  setsDone       Int
  repsDone       String?      // JSON or text: "10, 10, 8"
  weightUsed     Float?
  comments       String?
}

model WeighIn {
  id           String   @id @default(uuid())
  studentId    String
  student      User     @relation(fields: [studentId], references: [id])
  
  date         DateTime @default(now())
  weight       Float
  observations String?
}

model Payment {
  id           String   @id @default(uuid())
  studentId    String
  student      User     @relation(fields: [studentId], references: [id])
  
  date         DateTime @default(now())
  amount       Float
  method       String?
  observations String?
}

model PlanTemplate {
  id          String   @id @default(uuid())
  professorId String
  professor   User     @relation("ProfessorTemplates", fields: [professorId], references: [id])
  
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  exercises   TemplateExercise[]
  plans       Plan[]
}

model TemplateExercise {
  id         String       @id @default(uuid())
  templateId String
  template   PlanTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  
  exerciseId String
  exercise   Exercise     @relation(fields: [exerciseId], references: [id])
  
  day        String
  sets       Int
  reps       String?
  weight     Float?
  rest       Int?
  order      Int          @default(0)
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  type      String   // MEMBERSHIP_EXPIRING, NEW_PLAN_ASSIGNED, PAYMENT_REMINDER
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Message {
  id         String   @id @default(uuid())
  senderId   String
  sender     User     @relation("SentMessages", fields: [senderId], references: [id])
  
  receiverId String
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  
  content    String
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model GymSettings {
  id                 String   @id @default(uuid())
  gymName            String   @default("Gym Manager")
  logoUrl            String?
  primaryColor       String   @default("#0d6efd")
  secondaryColor     String   @default("#6c757d")
  accentColor        String   @default("#198754")
  termsAndConditions String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model ActivityLog {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  action     String   // "CREATE_STUDENT", "UPDATE_PLAN", "DELETE_EXERCISE", etc.
  entityType String   // "Student", "Plan", "Exercise", etc.
  entityId   String?
  details    String?  // JSON string with additional details
  ipAddress  String?
  createdAt  DateTime @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([token])
  @@index([userId])
}
